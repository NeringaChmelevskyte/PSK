@model IEnumerable<Application.Entities.User>

@{
    ViewData["Title"] = "AllUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>All Users</h2>

<p>
    <a asp-action="AddUserView">Add New User</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.ActionLink("edit", "EditUserView", "Users", new { Id = item.Id, Name = item.Name, Surname = item.Surname, Email = item.Email, Password = item.Password, Role = item.Role })
                </td>
                <td>
                    @Html.ActionLink("delete", "DeleteView", "Users", new { id = item.Id })
                </td>
                @*<td>
                    @Html.ActionLink("User Calendar", "index", "Events", new { id = item.Id })
                    </td>*@
                <td>
                    @Html.ActionLink("User Calendar For Organizer", "ShowEvents", "Events", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

<h2>Active Invites to Trip</h2>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Accept Invitation
                </th>
                <th>
                    Decline Invitation
                </th>
                <th>
                    TripName
                </th>
                <th>
                    StartDate
                </th>
                <th>
                    EndDate
                </th>
                <th>
                    FromOffice
                </th>
                <th>
                    ToOffice
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.Trips)
            {
                @foreach (var item1 in ViewBag.Offices)
                {
                    if (item1.Id == item.FromOffice) { ViewData["Name1"] = item1.Name; }
                    if (item1.Id == item.ToOffice) { ViewData["Name2"] = item1.Name; }
                }
                <tr>
                    <td>
                        <button onclick="accept(@item.Id)">Accept</button>
                    </td>
                    <td>
                        <button onclick="decline(@item.Id)">Decline</button>
                    </td>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Start
                    </td>
                    <td>
                        @item.End
                    </td>
                    <td>
                        @ViewData["Name1"]
                    </td>
                    <td>
                        @ViewData["Name2"]
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function accept(Id) {
                $.ajax({
                    type: "POST",
                    url: '/Users/AddParticipant',
                    data: { 'id': Id },
                    success: function (status) {
                        if (status) {
                            window.location.href=window.location.href
                        }
                    },
                    error: function () {
                        alert('Failed');
                    }
                })
            }

    function decline(Id) {
                $.ajax({
                    type: "POST",
                    url: '/Users/RemoveParticipant',
                    data: { 'id': Id },
                    success: function (status) {
                        if (status) {
                            window.location.href=window.location.href
                        }
                    },
                    error: function () {
                        alert('Failed');
                    }
                })
        }
    </script>
}

